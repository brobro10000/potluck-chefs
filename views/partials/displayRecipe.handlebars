<div>
    {{#if recipe}}
    {{#each recipe}}
    <div class='container'>
        <div class='collapsible recipe'>
            <li style='list-style:none'>
                <div class='collapsible-header row'>
                    <div class='col s2'>
                        <img id='delete-btn{{id}}' type='btn' class="deleteBtn" src="/images/icons/remove.svg"
                            onclick='getId(this)'></img>
                    </div>
                    <div class='col s8'>
                        <h3 class='displayRecipe-name'>
                            {{name}}
                        </h3>
                    </div>
                    <div class='col s2' style='text-align:center'>
                        <img class='qr-box'
                            src='https://api.qrserver.com/v1/create-qr-code/?size=75x75&data=https://www.youtube.com/watch?v={{videoLink}}'>
                    </div>

                </div>
                <div class='collapsible-body'>
                    <div class='row'>
                        <div class='col s12 m6'>
                            <h5 style='text-align:center'>
                                Check out the video!
                            </h5>
                            <div style='text-align: center;'>
                                
                                <a id="link1" href="https://www.youtube.com/watch?v={{videoLink}}" target="_blank"><img
                                        class='yt-video' src={{videoImage}}></a>
                            </div>
                        </div>
                        <div class='row col s12 m6'>
                            <h5 style='text-align:center'>Ingredients</h5>
                            <div>
                                {{#each this.ingredients}}
                                <div class='ingredient-box'>
                                    <ol class='col ingredientL'>
                                        {{> ingredientList}}
                                    </ol>
                                    {{/each}}

                                    {{#each this.amount}}
                                    <ol class='col ingredientR'>
                                        {{> amountList}}
                                    </ol>
                                    {{/each}}
                                </div>
                            </div>
                        </div>
                    </div>
                    {{#each this.steps}}
                    <div class='directions'>
                        <h4 style="text-align: center;">Directions to Cook</h4>
                        <ol>
                            {{> stepList}}
                        </ol>
                    </div>
                    {{/each}}
                </div>
        </div>
        {{> exportRecipe }}
    </div>
    {{/each}}
    {{/if}}
    </li>
</div>
<script src="/javascript/recipe.js"></script>